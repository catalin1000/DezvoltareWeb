@model CatalinProiect2.Models.Drink

@using (Html.BeginForm("New", "Drinks", FormMethod.Post, new { enctype = "multipart/form-data", @class = "needs-validation", novalidate = "true" }))
{
    <div class="container mt-5">
        <h2 class="text-center" style ="font-size: 2rem !important; color: grey;">Adaugare Bautura Noua</h2>

        @Html.ValidationSummary(false, "", new { @class = "text-danger" })

        <div class="mb-3">
            @Html.Label("Name", "Numele bauturii", new { @class = "form-label" })
            @Html.TextBox("Name", null, new { @class = "form-control", required = "required" })
            @Html.ValidationMessage("Name", null, new { @class = "text-danger" })
        </div>

        <div class="mb-3">
            @Html.Label("Content", "Descrierea bauturii", new { @class = "form-label" })
            @Html.TextArea("Content", null, new { @class = "form-control", required = "required" })
            @Html.ValidationMessage("Content", null, new { @class = "text-danger" })
        </div>

        <div class="mb-3">
            <label class="form-label">Selectati categoria</label>
            @Html.DropDownListFor(m => m.CategoryId, new SelectList(Model.Categ, "Value", "Text"), "Selectati Categoria", new { @class = "form-control", required = "required" })
            @Html.ValidationMessage("CategoryId", null, new { @class = "text-danger" })
        </div>

        <div class="mb-3">
            @Html.Label("Price", "Introduceti pretul", new { @class = "form-label" })
            <div class="input-group">
                <span class="input-group-text">RON</span>
                @Html.TextBox("Price", null, new { @class = "form-control", type = "number", step = "0.1", min = "0", required = "required" })
            </div>
            @Html.ValidationMessage("Price", null, new { @class = "text-danger" })
        </div>


        <div class="mb-3">
            <label class="form-label">Selectați imaginea</label>
            <input type="file" name="DrinkPhoto" class="form-control-file" required="required" />
        </div>

        <br />
        <button class="btn btn-success" type="submit">Adauga bautura</button>
    </div>
}